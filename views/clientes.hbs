<link rel="stylesheet" href="css/all.min.css">
<link rel="stylesheet" href="css/dataTables.bootstrap5.min.css">
<div class="container">
    <div class="row my-3">
        <div class="col-md-8"><h2>Clientes</h2></div>
    </div>
    <div class="table-responsive">
        <table id="clientes" class="table table-striped table-sm">
            <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Correo</th>
                <th scope="col">Direccion</th>
                <th scope="col">Teléfono</th>
                <th scope="col">Cédula</th>
                <th scope="col">Estado</th>
                <th scope="col">Acción</th>
            </tr>
            </thead>
            <tbody>
            {{#each result}}
            <tr>
                <td>{{this.nombre}}</td>
                <td>{{this.email}}</td>
                <td>{{this.direccion}}</td>
                <td>{{this.telefono}}</td>
                <td>{{this.cedula}}</td>
                <td><div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                </div></td>
                <td><a class="btn bg-secondary text-white" href="editcliente.html"> Editar <span data-feather="edit-3"></span> </a></td>
            </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>
<script type="text/javascript" src="js/jquery-3.6.0.js"></script>
<script type="text/javascript" src="js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="js/dataTables.bootstrap5.min.js"></script>
<script type="text/javascript" src="js/jquery-ui.js"></script>
<script>
    var table = $('#clientes').dataTable({
      'dom': "<'row' <'col-sm-3'<'toolbar'>><'col-sm-6'l><'col-sm-3'f>" +
         "<'row'<'col-sm-12'tr>>" +
         "",
         'language': {
						"decimal": "",
						"emptyTable": "No hay información",
						"info": "Mostrando _START_ a _END_ de _TOTAL_ Entradas",
						"infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
						"infoFiltered": "(Filtrado de _MAX_ total entradas)",
						"infoPostFix": "",
						"thousands": ",",
						"lengthMenu": "Mostrar _MENU_ Entradas",
						"search": "Buscar:",
						"zeroRecords": "Sin resultados encontrados",
						"paginate": {
							"first": "Primero",
							"last": "Ultimo",
							"next": "Siguiente",
							"previous": "Anterior"
						}
          },
          "bLengthChange": false,
    });
    $("div.toolbar").html('<div class="form-group mt-3"><a class="btn btn-primary" href="http://localhost:4000/clientnew"> <span data-feather="user-plus"></span> Agregar cliente </a></div>');
</script>